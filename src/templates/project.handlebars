<div class="project active" data-name="{{ project_name }}">
    <!-- Main Content -->
    <!-- TODO: Clean up data model for this -->
    <div class="project-header">
        <div class="header-image">
            <img width=100% src="{{carousel_images.[0]}}">
            {{#if title}}
                <div class="project-title">
                    <h3>{{ title }}</h3>
                </div>
            {{/if}}
        </div>
    </div>

    {{#if carousel_images}}
    <!-- Carousel -->
    <div id="project-carousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            {{#each carousel_images}}
            <div class="item">
                <img width=900 height=500 src="{{this}}">
            </div>
            {{/each}}
        </div>
        
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    {{/if}}

    {{#if raw_content}}
    <!-- Raw Content TODO: Make scrolltown invisible on mobile-->
    <!-- {{{raw_content}}} -->
    {{/if}}

    <!-- End Main Content -->

    <div class="row">
        <div class="col-md-3">
            <h3>Role</h3>
            <p>
            {{#each roles}}
                {{ this }}<br>
            {{/each}}
            </p>
            <h3>Technologies</h3>
            <p>
            {{#each technologies}}
                {{this}}<br>
            {{/each}}
            </p>
            <h3>Duration</h3>
            <p>{{duration}}</p>
        </div>
        <div class="col-md-9">
            {{#if download_link}}
            <div class="download-link text-center">
                <a href="{{download_link}}">
                    <div class="interact-button download-button text-center">
                        Download Game
                    </div>
                </a>
                <span class="controller-warning">{{controller_warning}}
            </div>
            {{/if}}
            <h3>Overview</h3>
            {{{description}}}
            <h3>Commentary</h3>
            {{{commentary}}}
        </div>
    </div>
</div>